# Service Configuration
SERVICE_NAME=alert-maintenance
PORT=8003
DEBUG=False

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql+asyncpg://drdo_user:drdo_password@localhost:5432/drdo_maintenance

# Redis Configuration (REQUIRED)
REDIS_URL=redis://localhost:6379/2

# ML Prediction Service URL (REQUIRED)
ML_PREDICTION_URL=http://localhost:8002

# Logging
LOG_LEVEL=INFO

# Alert Thresholds
CRITICAL_ALERT_THRESHOLD=0.8
HIGH_ALERT_THRESHOLD=0.6

# Maintenance Scheduling
CRITICAL_MAINTENANCE_DAYS=7
HIGH_MAINTENANCE_DAYS=15
MEDIUM_MAINTENANCE_DAYS=30

# CORS Settings (comma-separated)
CORS_ORIGINS=*

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
