# Service Configuration
SERVICE_NAME=alert-maintenance-service
SERVICE_VERSION=1.0.0
PORT=8003
HOST=0.0.0.0
DEBUG=False
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://drdo:drdo123@localhost:5432/equipment_maintenance
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_ECHO=False

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# External Service URLs
ML_PREDICTION_SERVICE_URL=http://localhost:8002
SENSOR_INGESTION_SERVICE_URL=http://localhost:8001

# Email Configuration (for alert notifications)
EMAIL_ENABLED=True
EMAIL_FROM=alerts@drdo.gov.in
EMAIL_TO=maintenance@drdo.gov.in
EMAIL_CC=ops@drdo.gov.in
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=True

# Alert Configuration
ALERT_CRITICAL_THRESHOLD=0.8
ALERT_HIGH_THRESHOLD=0.6
ALERT_MEDIUM_THRESHOLD=0.4
AUTO_CREATE_TASKS=True

# Maintenance Task Configuration
DEFAULT_TASK_DURATION=4
CRITICAL_PRIORITY_DAYS=7
HIGH_PRIORITY_DAYS=15
MEDIUM_PRIORITY_DAYS=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8004"]
CORS_CREDENTIALS=True
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Celery Configuration (for async background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=True
