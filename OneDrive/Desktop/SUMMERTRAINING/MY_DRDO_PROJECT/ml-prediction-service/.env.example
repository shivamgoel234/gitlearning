# Service Configuration
SERVICE_NAME=ml-prediction
PORT=8002
DEBUG=False

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql+asyncpg://drdo_user:drdo_password@localhost:5432/drdo_maintenance

# Redis Configuration (REQUIRED)
REDIS_URL=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO

# ML Model Configuration
MODEL_PATH=models/failure_predictor_v1.pkl
MODEL_METADATA_PATH=models/model_metadata_v1.json

# Prediction Thresholds
CRITICAL_THRESHOLD=0.8
HIGH_THRESHOLD=0.6
MEDIUM_THRESHOLD=0.4
LOW_THRESHOLD=0.0

# CORS Settings (comma-separated)
CORS_ORIGINS=*

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
